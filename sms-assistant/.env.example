# SMS Assistant Configuration
# Copy to .env and customize values

# Required: Your dumbphone number
DUMBPHONE_NUMBER=+441234567890

# Ollama LLM settings
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# Pi SSH connection for PING/RESET commands
PI_HOST=pi@192.168.1.236

# Paths
OBSIDIAN_TODO=~/obsidian/_todo.md
MESSAGES_DB=~/Library/Messages/chat.db
STATE_FILE=~/.sms-assistant/state.json
CONTACTS_FILE=~/docker-projects/notification-forwarder/contacts.json
DATA_FILE=~/.sms-assistant/data.json

# Location settings (for weather/rain commands)
DEFAULT_LOCATION=London,UK
DEFAULT_LAT=51.5074
DEFAULT_LON=-0.1278

# Bark settings (for LOCATE command)
BARK_URL=http://192.168.1.100:8089
BARK_DEVICE_KEY=your_device_key

# Polling interval in seconds
POLL_INTERVAL=10
